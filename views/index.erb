      <div id="estadio_circulo" class="circulo">
        <div class="porcento_0">100%
          <div class="marcador"></div>
        </div>
        <div class="porcento_50">50%
          <div class="marcador"></div>
        </div>
      </div>
      <div class="image-title"></div>
    </a>
    <h1>Estádios e Arenas</h1>
    <p>Verba prevista: <span id="valor_previsto_estadio"></span></p>
    <ul class="legenda">
      <li class="amarelo">
