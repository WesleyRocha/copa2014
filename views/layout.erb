<body>
    <div class="top">
        <div class="top_area">
            <div class="bola"></div>

            <div class="menu">
                <a href="/" title="Home" rel="home">
                    <h1>
                        <div>OpenCopa</div>
                        <div class="subtitle">Por debaixo dos gramados</div>
                    </h1>
                </a>
          
                <ul class="legenda">
                    <li class="vermelho"><span></span>Não contratado</li>
                    <li class="amarelo"><span></span>Contratado e não executado</li>
                    <li class="verde"><span></span>Executado</li>
                </ul>

                <% menu = (yield_content(:menu) || "investimentos").strip %>
                <a href="/" title="Andamento dos investimentos" class="investimentos <%= menu == 'investimentos' ? 'marcado' : '' %>">
                    Andamento dos investimentos
                </a>
                <a href="/proporcao-de-valores" title="Proporção de valore" class="proporcao <%= 'marcado' if menu == 'proporcao' %>">
                    Proporção de valores
                </a>
                <a href="http://transparencia.gov.br/copa2014/dados/home.seam" title="Baixe os dados" target="_blank" class="download"></a>
            </div>
        </div>
    </div>

    <div class="corpo">
    	<%= yield %>
    </div>

