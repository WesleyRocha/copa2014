<% content_for :stylesheets do %>
  <link rel="stylesheet" type="text/css" href="/main.css" />
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" src="/javascript/cidade_sede.js" charset="utf-8"></script>
<% end %>

<% content_for :title do %>
  OpenCopa 2014 - Por debaixo dos gramados
<% end %>

<div class="quadro_moudura">
	<div class="quadro_interno livre">
		<div class="migalha">
			<a href="/">Principais Temas</a>
			::
			<a href="/tema/<%= @tema[:name] %>"><%= @tema[:label] %></a>
			::
			<span><%= @cidade_sede[:label] %></span>
		</div>

		<div id="<%= @tema[:name] %>">
			<div id="<%= @tema[:name] %>_circulo" class="circulo">
				<div class="porcento_0">
					0%
					<div class="marcador"></div>
				</div>
				<div class="porcento_50">
					50%
					<div class="marcador"></div>
				</div>
			</div>
			<div class="image-title"></div>
		</div>

		<div class="container_empreendimentos">
			<% @empreendimentos.each do |empreendimento| %>
				<h2><%= empreendimento.descricao %></h2>
				Contratado: <%= empreendimento.valor_contratado %>
				<div class="trilha">
					<div class="amarelo"></div>
					<div class="laranja"></div>
				</div>
				Presvisto: <%= empreendimento.valor_previsto %> Executado:<%= empreendimento.valor_executado %>
				<div class="trilha">
					<div class="verde"></div>
					<div class="vermelho"></div>
				</div>
				<br/><br/>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
  var json_investimento_cidade_sede = <%= @investimento_cidade_sede.to_hash.to_json %>;
</script>
